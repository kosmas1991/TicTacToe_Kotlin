<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TableLayout
            android:layout_width="395dp"
            android:layout_height="715dp" tools:layout_editor_absoluteX="8dp"
            tools:ignore="MissingConstraints" app:layout_constraintTop_toTopOf="parent" android:gravity="center"
            android:id="@+id/tableLayout">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center">
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button1" android:minHeight="100dip"
                    android:onClick="buttonPressed" android:textSize="24sp"/>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button2" android:minHeight="100dip"
                    android:onClick="buttonPressed" android:textSize="24sp"/>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button3" android:minHeight="100dip"
                    android:onClick="buttonPressed" android:textSize="24sp"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center">
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button4" android:minHeight="100dip"
                    android:onClick="buttonPressed" android:textSize="24sp"/>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button5" android:minHeight="100dip"
                    android:onClick="buttonPressed" android:textSize="24sp"/>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button6" android:minHeight="100dip"
                    android:onClick="buttonPressed" android:textSize="24sp"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center">
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button7" android:minHeight="100dip"
                    android:onClick="buttonPressed" android:textSize="24sp"/>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button8" android:minHeight="100dip"
                    android:onClick="buttonPressed" android:textSize="24sp"/>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button9" android:minHeight="100dip"
                    android:onClick="buttonPressed" android:textSize="24sp"/>
        </TableRow>
    </TableLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/tableLayout" android:layout_marginTop="80dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:textSize="30sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>